<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/blue_background"
    android:orientation="vertical"
    tools:context=".activity.LoginSignup.ForgetPassSuccessMessage">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/general_back_back"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Update"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="@font/ubuntu_bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginTop="-80dp"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/done"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your password has been update!"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cairo_semibold"
            android:textAlignment="center"
            android:gravity="center"
            />
<Button
    android:id="@+id/set_new_btn_login"
    android:onClick="callLoginScreen"
    android:transitionName="transition_btn_login"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Login"
    android:textColor="@color/black"
    android:layout_margin="20dp"/>
    </LinearLayout>
    
</LinearLayout>