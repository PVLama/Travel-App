<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    android:orientation="vertical"
    tools:context=".activity.LoginSignup.DetailProfile">

    <ImageView
        android:id="@+id/detail_Prof_back"
        android:onClick="callMyProfileActivity"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/general_back_back"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:transitionName="transition_detailpro_back"

        />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Thông tin cá nhân"
    android:textSize="30dp"
    android:fontFamily="@font/ubuntu"
    android:textColor="#000000"
    android:gravity="center"
    />
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@drawable/black_border"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/prof_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:text="Thông tin"
            android:layout_marginLeft="25dp"
            android:textSize="19sp"
            android:transitionName="transition_email"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:background="@drawable/black_border"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên tài khoản"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/prof_tentaikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:textSize="19sp"
            android:transitionName="transition_username"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:background="@drawable/black_border"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/prof_sodienthoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:textSize="19sp"
            android:transitionName="transition_noPhone"
             />


    </LinearLayout>

    <Button
        android:onClick="callUpdateUser"
        android:id="@+id/btn_next_toUpdate"
        android:transitionName="transition_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Chỉnh sửa thông tin cá nhân"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="19sp" />
</LinearLayout>